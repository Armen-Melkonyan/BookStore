@model BookModel

<div class="container">
    <h1 class="display-5"> Book Details </h1>
    <p>@Model.</p>
    <div class="row">

        <div class="col-md-6">

            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">

                <div class="carousel-indicators">
                    @for (var i = 0; i < Model.Gallery.Count(); i++)
                    {
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="@(i == 0 ?  "active" : "")" aria-current="true" aria-label="Slide 1"></button>
                    }
                </div>

                <div class="carousel-inner">
                    @for (var i = 0; i < Model.Gallery.Count(); i++)
                    {
                        <div class="@(i == 0 ?  "carousel-item active" : "carousel-item")">
                            <img src="@Model.Gallery[i].URL" class="d-block w-100" alt="...">
                        </div>
                    }
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>

        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-2">
                    <h2>@Model.Title</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <p>By: @Model.Author</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12"></div>
                <p>@Model.Description</p>
            </div>
            <br />
            <div class="row">
                <div class="col-md-4">
                    <a class="btn-outline-info" href="@Model.BookPdfURL" target="_blank">Read the book</a>
                </div>
            </div>
            <br /><br /><hr />
            <div class="row">
                <div class="col-md-12">
                    <ul class="list-group">
                        <li class="list-group-item">Author: @Model.Author</li>
                        <li class="list-group-item">Release: @Model.ReleaseDate</li>
                        <li class="list-group-item">Total pages: @Model.Pages</li>
                        <li class="list-group-item">Category: @Model.Category</li>
                        <li class="list-group-item">Language: @Model.Language</li>
                    </ul>
                </div>
            </div>

        </div>

    </div>
</div>